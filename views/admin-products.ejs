<%- include('./partials/header'); %>

<body class="bg-gray-100">
    <div class="flex flex-col min-h-screen">
        <!-- Header -->
        <header class="bg-white shadow">
            <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
                <h1 class="text-3xl font-bold text-gray-900">Product Management</h1>
            </div>
        </header>

        <!-- Main content -->
        <main class="flex-1 overflow-y-auto">
      <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                <!-- Search Bar -->
             <div class="mb-6">
                    <form action="/admin/products/search" method="GET" class="flex">
                        <input type="text" name="product_id" placeholder="Search by Product ID"
                            class="w-full p-2 border border-gray-300 rounded-l">
                        <button type="submit"
                            class="bg-indigo-600 text-white py-2 px-4 rounded-r hover:bg-indigo-700">
                            Search
                        </button>
                    </form>
                </div>

                <!-- Search Result -->
                <% if (found && searchResult) { %>
                    <div class="bg-white shadow rounded-lg mb-6 p-6">
                        <h2 class="text-2xl font-semibold text-gray-800">Search Result</h2>
                        <div class="bg-gray-50 p-4 rounded-lg shadow">
                            <img class="w-32 h-32 mb-3" src="data:image/png;base64,<%= searchResult.image.toString('base64') %>" alt="">
                            <h3 class="text-lg font-medium text-gray-900"><%= searchResult.name %></h3>
                            <p class="mt-2 text-gray-600">Price: <%= searchResult.price %></p>
                            <p class="mt-2 text-gray-600">Stock: <%= searchResult.stocks %></p>
                            <p class="mt-2 text-gray-600"><%= searchResult.description %></p>
                            <p class="mt-2 text-sm text-gray-500">Product ID: <%= searchResult._id %></p>
                        </div>
                    </div>
                <% } else if (found === false) { %>
                    <div class="bg-white shadow rounded-lg mb-6 p-6">
                        <h2 class="text-2xl font-semibold text-gray-800">No Product Found</h2>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
</body>

<%- include('./partials/footer'); %>
